{% extends 'base.html.twig' %}
{% block title %}
    Modifier le compte
{% endblock %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.email) }}
    {{ form_row(form.birthdate) }}
    {{ form_row(form.phonenumber) }}
    {{ form_row(form.plainPassword) }}

    <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(form) }}
{% endblock %}